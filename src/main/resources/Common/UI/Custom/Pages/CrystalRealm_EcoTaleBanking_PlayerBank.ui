$C = "../Common.ui";

@GoldTitle = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 18,
  TextColor: #ffaa00,
  RenderBold: true,
  HorizontalAlignment: Center
);

@White = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #ffffff
);

@Gray = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 12,
  TextColor: #aaaaaa
);

@SmGray = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 11,
  TextColor: #aaaaaa
);

@Value = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #55ff55,
  RenderBold: true
);

@SmValue = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 12,
  TextColor: #55ff55,
  RenderBold: true
);

@GoldSm = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 14,
