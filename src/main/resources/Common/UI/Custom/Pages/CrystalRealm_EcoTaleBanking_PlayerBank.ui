@Error = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #ff4444,
  RenderBold: true
);

@Success = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 13,
  TextColor: #55ff55,
  RenderBold: true
);

@Frozen = LabelStyle(
  ...$C.@DefaultLabelStyle,
